<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <view class="com.example.digplay.EditorActivity$DrawView"
        android:id="@+id/DrawView"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"/>
	   
    <Button android:id="@+id/save"
      	android:text="Save"
      	android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
      	android:layout_alignParentTop="true"
      	android:layout_alignParentRight="true"
      	android:textSize="30dp"
      	android:onClick="onBtnClicked" />
    
    <Button android:id="@+id/add_player"
      	android:text="Add Player"
      	android:layout_width="240dp"
        android:layout_height="60dp"
      	android:layout_alignParentBottom="true"
      	android:layout_alignParentLeft="true"
      	android:textSize="30dp"
      	android:layout_marginLeft="300dp"
      	android:onClick="onBtnClicked" />
    
    <Spinner android:id="@+id/position"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:prompt="@string/positions"
        android:layout_alignParentBottom="true"
      	android:layout_alignParentLeft="true"
      	android:layout_marginLeft="5dp"/>
    
     <Button android:id="@+id/delete_player"
      	android:text="Delete Player"
      	android:layout_width="240dp"
        android:layout_height="60dp"
      	android:layout_alignParentBottom="true"
      	android:layout_alignParentLeft="true"
      	android:textSize="30dp"
      	android:layout_marginLeft="545dp"
      	android:onClick="onBtnClicked" />
     
    <Button android:id="@+id/clear_routes"
      	android:text="Clear Routes"
      	android:layout_alignParentBottom="true"
      	android:layout_alignParentLeft="true"
      	android:layout_width="240dp"
        android:layout_height="60dp"
      	android:textSize="30dp"
      	android:layout_marginLeft="790dp"
      	android:onClick="onBtnClicked" />

    <Button android:id="@+id/clear_field"
      	android:text="Clear Field"
      	android:layout_width="240dp"
        android:layout_height="60dp"
      	android:layout_alignParentBottom="true"
      	android:layout_alignParentLeft="true"
      	android:textSize="30dp"
      	android:layout_marginLeft="1035dp"
      	android:onClick="onBtnClicked" />
    
    <Button android:id="@+id/add_route"
      	android:text="Add Route"
      	android:layout_width="240dp"
        android:layout_height="60dp"
      	android:layout_above="@+id/clear_field"
      	android:textSize="30dp"
      	android:layout_marginLeft="790dp"
      	android:onClick="onBtnClicked" />
    
    <Button android:id="@+id/remove_route"
      	android:text="Remove Route"
      	android:layout_width="240dp"
        android:layout_height="60dp"
      	android:layout_above="@+id/clear_field"
      	android:layout_marginLeft="1035dp"
      	android:textSize="30dp"
      	android:onClick="onBtnClicked" /> 
    
    <TextView
        android:id="@+id/play_type_text"
        android:layout_width="250dp"
        android:layout_height="115dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
      	android:layout_alignParentLeft="true"
        android:text="Play Type:"
        android:textColor="#000000"
        android:textSize="30dp" />
    
    <Spinner android:id="@+id/play_type"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_above="@+id/add_player"
        android:prompt="@string/play_type"
        android:layout_marginLeft="150dp"/>
    
    <TextView
        android:id="@+id/route"
        android:layout_width="250dp"
        android:layout_height="115dp"
        android:layout_marginLeft="280dp"
        android:layout_alignParentBottom="true"
      	android:layout_alignParentLeft="true"
        android:text="Route:"
        android:textColor="#000000"
        android:textSize="30dp" />
    
    <TextView
        android:id="@+id/yardage_text"
        android:layout_width="250dp"
        android:layout_height="115dp"
        android:layout_marginLeft="560dp"
        android:layout_alignParentBottom="true"
      	android:layout_alignParentLeft="true"
        android:text="Yardage:"
        android:textColor="#000000"
        android:textSize="30dp" />
    
    <Spinner android:id="@+id/route_type"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_above="@+id/delete_player"
        android:text="Route Type"
        android:prompt="@string/route_type"
        android:layout_marginLeft="370dp"/>
    
    <Spinner android:id="@+id/yardage"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Yardage"
        android:prompt="@string/yardage"
        android:layout_above="@+id/delete_player"
        android:layout_marginLeft="685dp"/>
    
</RelativeLayout>

