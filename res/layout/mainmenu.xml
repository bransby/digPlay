<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/mainlookatplaybook"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="300dp"
        android:layout_marginRight="300dp"
        android:layout_marginTop="50dp"
        android:text="LOOK AT PLAYBOOK" />

    <Button
        android:id="@+id/mainviewgameplan"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/mainlookatplaybook"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="300dp"
        android:layout_marginRight="300dp"
        android:layout_marginTop="50dp"
        android:text="VIEW GAME PLAN" />

    <Button
        android:id="@+id/maindrawplay"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="300dp"
        android:layout_marginRight="300dp"
        android:layout_marginTop="75dp"
        android:text="DRAW NEW PLAY" />

    <Button
        android:id="@+id/maincreategameplan"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/mainviewgameplan"
        android:layout_alignLeft="@+id/mainviewgameplan"
        android:layout_marginBottom="21dp"
        android:layout_marginRight="300dp"
        android:text="CREATE GAME PLAN" />

</RelativeLayout>
