<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cu_stadium"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/gp_manager_pb_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dip"
            android:text="Playbook Plays"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="17dip" />

        <ListView
            android:id="@+id/gm_playbook"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="15dip"
            android:dividerHeight="5dip" >

        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/gm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dip"
            android:text="Gameplan Manager"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dip" />

        <Button
            android:id="@+id/gm_create_gp"
            android:layout_width="fill_parent"
            android:layout_height="34dip"
            android:layout_gravity="center"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="55dip"
            android:text="Create new gameplan"
            android:textSize="10dip" />

        <Spinner
            android:id="@+id/gm_spinner"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="20dip" />

        <Button
            android:id="@+id/gm_delete"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_gravity="center"
            android:layout_marginLeft="34dip"
            android:layout_marginRight="34dip"
            android:layout_marginTop="20dip"
            android:text="Click to enable deleting"
            android:textSize="10dip" />

        <Button
            android:id="@+id/gm_delete_gameplan"
            android:layout_width="fill_parent"
            android:layout_height="34dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="20dip"
            android:text="Delete this gameplan"
            android:textSize="10dip" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/gp_manager_gp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dip"
            android:text="Gameplan Plays"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="17dip" />

        <ListView
            android:id="@+id/gm_gameplan"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="15dip"
            android:dividerHeight="5dip" >

        </ListView>

    </LinearLayout>

</LinearLayout>